---
export interface Props {
    title: string;
    href: string;
}

const { href, title } = Astro.props;
---

<a
    href={href}
    class="w-11/12 sm:w-3/5 h-10 bg-gray-200 rounded-lg my-4 shadow-sm mx-auto flex items-center justify-center"
>
    <ul>
        <li>
            <h2 class="uppercase font-sans text-xl font-medium">
                {title}
                <span>&rarr;</span>
            </h2>
        </li>
    </ul>
</a>
